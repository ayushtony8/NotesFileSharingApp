@model NotesFileSharingApp.DTOs.ShareFileDto
@{
    ViewData["Title"] = "Share File";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4 class="card-title mb-0">
                    <i class="bi bi-share"></i> Share File
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    <strong>File:</strong> @ViewBag.FileName
                </div>

                <p>Enter the email address of the person you want to share this file with:</p>

                <form asp-action="Share" method="post">
                    <input asp-for="FileId" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-4">
                        <label asp-for="SharedWithEmail" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="SharedWithEmail" class="form-control" 
                                   placeholder="Enter recipient's email address" />
                        </div>
                        <span asp-validation-for="SharedWithEmail" class="text-danger"></span>
                        <div class="form-text">
                            The recipient must be a registered user of this application.
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-info">
                            <i class="bi bi-share"></i> Share File
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle"></i> Sharing Information
                </h6>
            </div>
            <div class="card-body">
                <ul class="mb-0">
                    <li>The recipient will be able to download your file immediately.</li>
                    <li>Shared files are read-only - recipients cannot modify the original file.</li>
                    <li>You can revoke sharing access at any time from your "Shared by Me" section.</li>
                    <li>The original file will always remain in your files collection.</li>
                    <li>Recipients will see the file in their "Shared with Me" section.</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}