<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Notes & File Sharing</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    
    <!-- Original Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Modern Theme CSS -->
    <link rel="stylesheet" href="~/css/modern-theme.css" asp-append-version="true" />
    
    <!-- Generated CSS -->
    <link rel="stylesheet" href="~/NotesFileSharingApp.styles.css" asp-append-version="true" />
</head>
<body class="fade-in d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-journal-text me-2"></i>Notes & Files
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house me-1"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Notes" asp-action="Index">
                                    <i class="bi bi-journal me-1"></i> My Notes
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Files" asp-action="Index">
                                    <i class="bi bi-file-earmark me-1"></i> My Files
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-share me-1"></i> Shared
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Sharing" asp-action="Index">
                                        <i class="bi bi-inbox me-2"></i> Shared with Me
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Sharing" asp-action="SharedByMe">
                                        <i class="bi bi-send me-2"></i> Shared by Me
                                    </a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                        <i class="bi bi-person me-2"></i> Profile
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4 flex-grow-1">
        <div class="content-container">
            <!-- Clean Alert Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show slide-up" role="alert">
                    <i class="bi bi-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show slide-up" role="alert">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </div>
    </main>

    <!-- Sticky Footer - Only show promotional content when NOT logged in -->
    <footer class="text-center py-4 mt-auto" style="background-color: var(--content-bg); border-top: 1px solid var(--border-color);">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <!-- Promotional content - only for non-authenticated users -->
                        <div class="mb-3">
                            <h5 class="text-gradient mb-2">
                                <i class="bi bi-journal-heart me-2"></i>
                                <strong>Notes & File Sharing</strong>
                            </h5>
                            <p class="text-muted mb-3">
                                <strong>Organize</strong> your thoughts, <strong>secure</strong> your files, and <strong>collaborate</strong> seamlessly. 
                                Built with modern technology for the digital age.
                            </p>
                        </div>
                        
                        <div class="row text-center mb-3">
                            <div class="col-md-4 mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-shield-check text-success me-1"></i>
                                    <strong>Secure</strong> & Private
                                </small>
                            </div>
                            <div class="col-md-4 mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-lightning-charge text-warning me-1"></i>
                                    <strong>Fast</strong> & Reliable
                                </small>
                            </div>
                            <div class="col-md-4 mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-people text-info me-1"></i>
                                    <strong>Easy</strong> Sharing
                                </small>
                            </div>
                        </div>
                        
                        <hr class="my-3" style="border-color: var(--border-color); opacity: 0.5;">
                    }
                    
                    <!-- Always visible footer content -->
                    <div class="d-flex justify-content-center align-items-center flex-wrap gap-3 mb-3">
                        <small class="text-muted">
                            <strong>&copy; 2025</strong> Notes & File Sharing App
                        </small>
                        <span class="text-muted">•</span>
                        <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none small">
                            <i class="bi bi-shield-lock me-1"></i>Privacy Policy
                        </a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span class="text-muted">•</span>
                            <small class="text-muted">
                                Welcome back, <strong>@User.Identity.Name</strong>!
                            </small>
                        }
                        else
                        {
                            <span class="text-muted">•</span>
                            <small class="text-muted">
                                Made with <i class="bi bi-heart-fill text-danger"></i> for productivity
                            </small>
                        }
                    </div>
                    
                    <small class="text-muted">
                        <strong>Version 1.0</strong> | Built with <strong>ASP.NET Core</strong> & <strong>Bootstrap</strong>
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- jQuery Easing (for smooth animations) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    
    <!-- Original Site JavaScript -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Modern Interactions JavaScript -->
    <script src="~/js/modern-interactions.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>