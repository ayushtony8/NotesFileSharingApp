@{
    ViewData["Title"] = "Shared with Me";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-inbox"></i> Shared with Me</h2>
    <div>
        <a asp-action="SharedByMe" class="btn btn-outline-info">
            <i class="bi bi-send"></i> View Shared by Me
        </a>
    </div>
</div>

@if (ViewBag.SharedNotes != null || ViewBag.SharedFiles != null)
{
    <!-- Shared Notes Section -->
    @if (((IEnumerable<dynamic>)ViewBag.SharedNotes).Any())
    {
        <div class="mb-5">
            <h4 class="mb-3"><i class="bi bi-journal-text"></i> Shared Notes</h4>
            <div class="row">
                @foreach (var sharedNote in (IEnumerable<dynamic>)ViewBag.SharedNotes)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 border-info">
                            <div class="card-header bg-info text-white py-2">
                                <small>
                                    <i class="bi bi-person"></i> Shared by: @sharedNote.SharedByUserName
                                    @if (sharedNote.CanEdit)
                                    {
                                        <span class="badge bg-success ms-2">Can Edit</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning ms-2">Read Only</span>
                                    }
                                </small>
                            </div>
                            <div class="card-body">
                                <h6 class="card-title">@sharedNote.NoteTitle</h6>
                                <p class="card-text">
                                    @if (sharedNote.NoteContent.Length > 80)
                                    {
                                        @Html.Raw(sharedNote.NoteContent.Substring(0, 80) + "...")
                                    }
                                    else
                                    {
                                        @sharedNote.NoteContent
                                    }
                                </p>
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> Shared: @DateTime.Parse(sharedNote.SharedAt.ToString()).ToShortDateString()
                                </small>
                            </div>
                            <div class="card-footer bg-transparent">
                                <a asp-action="ViewNote" asp-route-id="@sharedNote.NoteId" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> View Note
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Shared Files Section -->
    @if (((IEnumerable<dynamic>)ViewBag.SharedFiles).Any())
    {
        <div class="mb-5">
            <h4 class="mb-3"><i class="bi bi-file-earmark"></i> Shared Files</h4>
            <div class="row">
                @foreach (var sharedFile in (IEnumerable<dynamic>)ViewBag.SharedFiles)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 border-success">
                            <div class="card-header bg-success text-white py-2">
                                <small>
                                    <i class="bi bi-person"></i> Shared by: @sharedFile.SharedByUserName
                                </small>
                            </div>
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="bi bi-file-earmark"></i> @sharedFile.FileName
                                </h6>
                                <p class="card-text">
                                    <small class="text-muted">
                                        Type: @sharedFile.FileType<br>
                                        Size: @(Math.Round((double)sharedFile.FileSize / 1024, 1)) KB<br>
                                        <i class="bi bi-calendar"></i> Shared: @DateTime.Parse(sharedFile.SharedAt.ToString()).ToShortDateString()
                                    </small>
                                </p>
                            </div>
                            <div class="card-footer bg-transparent">
                                <a asp-action="DownloadFile" asp-route-id="@sharedFile.FileId" class="btn btn-outline-success btn-sm">
                                    <i class="bi bi-download"></i> Download
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    @if (!((IEnumerable<dynamic>)ViewBag.SharedNotes).Any() && !((IEnumerable<dynamic>)ViewBag.SharedFiles).Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h4 class="mt-3">No shared content</h4>
            <p class="text-muted">When someone shares notes or files with you, they'll appear here.</p>
        </div>
    }
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-inbox display-1 text-muted"></i>
        <h4 class="mt-3">No shared content</h4>
        <p class="text-muted">When someone shares notes or files with you, they'll appear here.</p>
    </div>
}