@{
    ViewData["Title"] = "Shared by Me";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-send"></i> Shared by Me</h2>
    <div>
        <a asp-action="Index" class="btn btn-outline-info">
            <i class="bi bi-inbox"></i> View Shared with Me
        </a>
    </div>
</div>

@if (ViewBag.SharedNotes != null || ViewBag.SharedFiles != null)
{
    <!-- My Shared Notes Section -->
    @if (((IEnumerable<dynamic>)ViewBag.SharedNotes).Any())
    {
        <div class="mb-5">
            <h4 class="mb-3"><i class="bi bi-journal-text"></i> Notes I've Shared</h4>
            <div class="row">
                @foreach (var sharedNote in (IEnumerable<dynamic>)ViewBag.SharedNotes)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 border-primary">
                            <div class="card-header bg-primary text-white py-2">
                                <small>
                                    <i class="bi bi-person"></i> Shared with: @sharedNote.SharedWithUserName
                                    @if (sharedNote.CanEdit)
                                    {
                                        <span class="badge bg-success ms-2">Can Edit</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning ms-2">Read Only</span>
                                    }
                                </small>
                            </div>
                            <div class="card-body">
                                <h6 class="card-title">@sharedNote.NoteTitle</h6>
                                <p class="card-text">
                                    @if (sharedNote.NoteContent.Length > 80)
                                    {
                                        @Html.Raw(sharedNote.NoteContent.Substring(0, 80) + "...")
                                    }
                                    else
                                    {
                                        @sharedNote.NoteContent
                                    }
                                </p>
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i> Shared: @DateTime.Parse(sharedNote.SharedAt.ToString()).ToShortDateString()
                                </small>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="d-flex justify-content-between">
                                    <a asp-controller="Notes" asp-action="Details" asp-route-id="@sharedNote.NoteId" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <form asp-action="UnshareNote" method="post" class="d-inline">
                                        <input name="noteId" value="@sharedNote.NoteId" type="hidden" />
                                        <input name="sharedWithEmail" value="@sharedNote.SharedWithUserName" type="hidden" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm" 
                                                onclick="return confirm('Are you sure you want to unshare this note?')">
                                            <i class="bi bi-x-circle"></i> Unshare
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- My Shared Files Section -->
    @if (((IEnumerable<dynamic>)ViewBag.SharedFiles).Any())
    {
        <div class="mb-5">
            <h4 class="mb-3"><i class="bi bi-file-earmark"></i> Files I've Shared</h4>
            <div class="row">
                @foreach (var sharedFile in (IEnumerable<dynamic>)ViewBag.SharedFiles)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 border-success">
                            <div class="card-header bg-success text-white py-2">
                                <small>
                                    <i class="bi bi-person"></i> Shared with: @sharedFile.SharedWithUserName
                                </small>
                            </div>
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="bi bi-file-earmark"></i> @sharedFile.FileName
                                </h6>
                                <p class="card-text">
                                    <small class="text-muted">
                                        Type: @sharedFile.FileType<br>
                                        Size: @(Math.Round((double)sharedFile.FileSize / 1024, 1)) KB<br>
                                        <i class="bi bi-calendar"></i> Shared: @DateTime.Parse(sharedFile.SharedAt.ToString()).ToShortDateString()
                                    </small>
                                </p>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="d-flex justify-content-between">
                                    <a asp-controller="Files" asp-action="Download" asp-route-id="@sharedFile.FileId" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-download"></i> Download
                                    </a>
                                    <form asp-action="UnshareFile" method="post" class="d-inline">
                                        <input name="fileId" value="@sharedFile.FileId" type="hidden" />
                                        <input name="sharedWithEmail" value="@sharedFile.SharedWithUserName" type="hidden" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm" 
                                                onclick="return confirm('Are you sure you want to unshare this file?')">
                                            <i class="bi bi-x-circle"></i> Unshare
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    @if (!((IEnumerable<dynamic>)ViewBag.SharedNotes).Any() && !((IEnumerable<dynamic>)ViewBag.SharedFiles).Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-send display-1 text-muted"></i>
            <h4 class="mt-3">No shared content</h4>
            <p class="text-muted">Notes and files you share with others will appear here.</p>
            <div class="mt-3">
                <a asp-controller="Notes" asp-action="Index" class="btn btn-primary me-2">
                    <i class="bi bi-journal"></i> View My Notes
                </a>
                <a asp-controller="Files" asp-action="Index" class="btn btn-success">
                    <i class="bi bi-file-earmark"></i> View My Files
                </a>
            </div>
        </div>
    }
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-send display-1 text-muted"></i>
        <h4 class="mt-3">No shared content</h4>
        <p class="text-muted">Notes and files you share with others will appear here.</p>
        <div class="mt-3">
            <a asp-controller="Notes" asp-action="Index" class="btn btn-primary me-2">
                <i class="bi bi-journal"></i> View My Notes
            </a>
            <a asp-controller="Files" asp-action="Index" class="btn btn-success">
                <i class="bi bi-file-earmark"></i> View My Files
            </a>
        </div>
    </div>
}