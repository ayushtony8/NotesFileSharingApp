@model NotesFileSharingApp.DTOs.NoteDto
@{
    ViewData["Title"] = "Note Details";
}

<div class="row justify-content-center">
    <div class="col-lg-9">
        <div class="card glass-card shadow-modern hover-lift">
            @if (Model.IsShared)
            {
                <div class="card-header" style="background: var(--info-gradient) !important;">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-share me-2"></i>
                            <span class="fw-bold">Shared Note</span>
                            @if (Model.CanEdit)
                            {
                                <span class="badge bg-success ms-2">
                                    <i class="bi bi-pencil me-1"></i>Can Edit
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning ms-2">
                                    <i class="bi bi-eye me-1"></i>Read Only
                                </span>
                            }
                        </div>
                        <small class="opacity-75">
                            <i class="bi bi-person me-1"></i>Shared by: @Model.UserName
                        </small>
                    </div>
                </div>
            }
            
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div class="flex-grow-1">
                        <h1 class="card-title mb-3 gradient-text">@Model.Title</h1>
                        <div class="text-muted">
                            <div class="d-flex flex-wrap gap-3">
                                <small class="d-flex align-items-center">
                                    <i class="bi bi-calendar me-1"></i>
                                    Created: @Model.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                                </small>
                                @if (Model.UpdatedAt != Model.CreatedAt)
                                {
                                    <small class="d-flex align-items-center">
                                        <i class="bi bi-pencil me-1"></i>
                                        Updated: @Model.UpdatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                                    </small>
                                }
                                @if (!Model.IsShared)
                                {
                                    <small class="d-flex align-items-center">
                                        <i class="bi bi-person me-1"></i>
                                        @Model.UserName
                                    </small>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="btn-group" role="group">
                        @if (Model.CanEdit)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="bi bi-pencil me-1"></i> Edit
                            </a>
                        }
                        @if (!Model.IsShared)
                        {
                            <a asp-action="Share" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="bi bi-share me-1"></i> Share
                            </a>
                        }
                    </div>
                </div>

                <hr class="my-4" style="border-color: var(--glass-border);">

                <div class="note-content">
                    <div class="glass-card p-4" style="
                        white-space: pre-wrap; 
                        line-height: 1.8; 
                        font-size: 1.1rem;
                        border-left: 4px solid var(--primary-gradient);
                        background: var(--content-bg);
                        min-height: 200px;
                    ">@Model.Content</div>
                </div>

                @if (Model.IsShared)
                {
                    <div class="mt-4">
                        <div class="alert alert-info glass-card">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Note:</strong> This note has been shared with you by <strong>@Model.UserName</strong>. 
                            @if (Model.CanEdit)
                            {
                                <span>You have permission to edit this note.</span>
                            }
                            else
                            {
                                <span>This is a read-only shared note.</span>
                            }
                        </div>
                    </div>
                }
            </div>
            
            <div class="card-footer bg-transparent p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to Notes
                    </a>
                    
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-info" onclick="copyNoteContent()" title="Copy note content to clipboard">
                            <i class="bi bi-clipboard me-1"></i> Copy
                        </button>
                        
                        @if (Model.CanEdit)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="bi bi-pencil me-1"></i> Edit
                            </a>
                        }
                        
                        @if (!Model.IsShared)
                        {
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                <i class="bi bi-trash me-1"></i> Delete
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyNoteContent() {
            const noteContent = document.querySelector('.note-content div').innerText;
            navigator.clipboard.writeText(noteContent).then(() => {
                // Show success notification
                showNotification('Note content copied to clipboard!', 'success');
                
                // Update button temporarily
                const button = event.target.closest('button');
                const originalContent = button.innerHTML;
                button.innerHTML = '<i class="bi bi-check me-1"></i> Copied!';
                button.classList.remove('btn-outline-info');
                button.classList.add('btn-success');
                
                setTimeout(() => {
                    button.innerHTML = originalContent;
                    button.classList.remove('btn-success');
                    button.classList.add('btn-outline-info');
                }, 2000);
            }).catch(err => {
                console.error('Failed to copy: ', err);
                showNotification('Failed to copy note content', 'danger');
            });
        }

        // Animate the note content on load
        $(document).ready(function() {
            $('.note-content').addClass('fade-in');
            
            // Add reading time estimate
            const noteText = $('.note-content div').text();
            const wordCount = noteText.split(/\s+/).length;
            const readingTime = Math.ceil(wordCount / 200); // Average reading speed
            
            if (wordCount > 50) { // Only show for longer notes
                const readingTimeHtml = `
                    <small class="text-muted d-flex align-items-center mt-2">
                        <i class="bi bi-clock me-1"></i>
                        Estimated reading time: ${readingTime} min${readingTime > 1 ? 's' : ''}
                        <span class="mx-2">•</span>
                        ${wordCount} words
                    </small>
                `;
                $('.text-muted .d-flex:last').append(readingTimeHtml);
            }
        });
    </script>
}