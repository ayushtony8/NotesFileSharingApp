@model NotesFileSharingApp.DTOs.ShareNoteDto
@{
    ViewData["Title"] = "Share Note";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card hover-lift">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <i class="bi bi-share me-2"></i>Share Note
                </h4>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-info mb-4">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Sharing:</strong> @ViewBag.NoteTitle
                </div>

                <p class="text-muted mb-4">Enter the email address of the person you want to share this note with:</p>

                <form asp-action="Share" method="post">
                    <input asp-for="NoteId" type="hidden" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-4">
                        <label asp-for="SharedWithEmail" class="form-label fw-semibold">Recipient Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="bi bi-envelope text-muted"></i>
                            </span>
                            <input asp-for="SharedWithEmail" class="form-control border-start-0 ps-0" 
                                   placeholder="Enter recipient's email address" />
                        </div>
                        <span asp-validation-for="SharedWithEmail" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle me-1"></i>
                            The recipient must be a registered user of this application.
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="card border-0" style="background-color: var(--gray-50);">
                            <div class="card-body p-3">
                                <div class="form-check">
                                    <input asp-for="CanEdit" type="checkbox" class="form-check-input" />
                                    <label asp-for="CanEdit" class="form-check-label fw-semibold">
                                        <i class="bi bi-pencil me-1"></i>Allow recipient to edit this note
                                    </label>
                                </div>
                                <div class="form-text mt-2">
                                    <small class="text-muted">
                                        If checked, the recipient will be able to make changes to your note content.
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Details" asp-route-id="@Model.NoteId" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-share me-2"></i> Share Note
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Sharing Information Card -->
        <div class="card mt-4 hover-lift">
            <div class="card-header bg-transparent">
                <h6 class="card-title mb-0 text-muted">
                    <i class="bi bi-lightbulb me-2"></i>Sharing Guidelines
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-check-circle text-success me-2 mt-1"></i>
                            <small>The recipient will receive access to view your note immediately.</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-pencil-square text-info me-2 mt-1"></i>
                            <small>Edit permissions allow them to modify the note content.</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-arrow-counterclockwise text-warning me-2 mt-1"></i>
                            <small>You can revoke sharing access anytime from "Shared by Me".</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-shield-check text-success me-2 mt-1"></i>
                            <small>The original note will always remain in your collection.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}