@model IEnumerable<NotesFileSharingApp.DTOs.NoteDto>
@{
    ViewData["Title"] = "My Notes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-journal"></i> My Notes</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus"></i> Create New Note
    </a>
</div>

<!-- Search -->
<div class="row mb-4">
    <div class="col-md-6">
        <form method="get" asp-action="Index">
            <div class="input-group">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" 
                       class="form-control" placeholder="Search notes..." />
                <button class="btn btn-outline-secondary" type="submit">
                    <i class="bi bi-search"></i> Search
                </button>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <a asp-action="Index" class="btn btn-outline-danger">
                        <i class="bi bi-x"></i> Clear
                    </a>
                }
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Showing results for "<strong>@ViewBag.SearchTerm</strong>"
    </div>
}

@if (Model.Any())
{
    <div class="row">
        @foreach (var note in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 @(note.IsShared ? "border-info" : "")">
                    @if (note.IsShared)
                    {
                        <div class="card-header bg-info text-white py-2">
                            <small><i class="bi bi-share"></i> Shared Note @(note.CanEdit ? "(Can Edit)" : "(Read Only)")</small>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@note.Title</h5>
                        <p class="card-text">
                            @if (note.Content.Length > 100)
                            {
                                @Html.Raw(note.Content.Substring(0, 100) + "...")
                            }
                            else
                            {
                                @note.Content
                            }
                        </p>
                        <small class="text-muted">
                            <i class="bi bi-calendar"></i> @note.CreatedAt.ToString("MMM dd, yyyy")
                            @if (!note.IsShared)
                            {
                                <span> • <i class="bi bi-person"></i> @note.UserName</span>
                            }
                        </small>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@note.Id" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> View
                            </a>
                            @if (note.CanEdit)
                            {
                                <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            }
                            @if (!note.IsShared)
                            {
                                <a asp-action="Share" asp-route-id="@note.Id" class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-share"></i> Share
                                </a>
                                <a asp-action="Delete" asp-route-id="@note.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-journal-x display-1 text-muted"></i>
        <h4 class="mt-3">No notes found</h4>
        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
        {
            <p class="text-muted">Try different search terms or <a asp-action="Index">view all notes</a>.</p>
        }
        else
        {
            <p class="text-muted">Start by creating your first note!</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus"></i> Create Your First Note
            </a>
        }
    </div>
}