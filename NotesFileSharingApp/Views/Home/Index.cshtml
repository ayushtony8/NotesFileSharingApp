@{
    ViewData["Title"] = "Dashboard";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="row mb-5">
        <div class="col-12">
            <h1 class="display-5 mb-3 text-gradient">
                <i class="bi bi-speedometer2 me-3"></i>Dashboard
            </h1>
            <p class="lead text-muted">Welcome back! Here's an overview of your notes and files.</p>
        </div>
    </div>

    <!-- Enhanced Statistics Cards with Equal Heights -->
    <div class="row mb-5">
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card stat-card notes-card hover-lift h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h6 class="text-muted mb-1">My Notes</h6>
                            <h2 class="stat-number mb-0">@ViewBag.MyNotesCount</h2>
                        </div>
                        <div>
                            <i class="bi bi-journal display-4 text-primary opacity-75"></i>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <a asp-controller="Notes" asp-action="Index" class="btn btn-outline-primary btn-sm w-100">
                            <i class="bi bi-arrow-right me-1"></i>View All Notes
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card stat-card files-card hover-lift h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h6 class="text-muted mb-1">My Files</h6>
                            <h2 class="stat-number mb-0" style="color: var(--success-color);">@ViewBag.MyFilesCount</h2>
                        </div>
                        <div>
                            <i class="bi bi-file-earmark display-4 text-success opacity-75"></i>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <a asp-controller="Files" asp-action="Index" class="btn btn-outline-success btn-sm w-100">
                            <i class="bi bi-arrow-right me-1"></i>View All Files
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card stat-card shared-card hover-lift h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h6 class="text-muted mb-1">Shared with Me</h6>
                            <h2 class="stat-number mb-0" style="color: var(--info-color);">@(ViewBag.SharedNotesCount + ViewBag.SharedFilesCount)</h2>
                        </div>
                        <div>
                            <i class="bi bi-share display-4 text-info opacity-75"></i>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <a asp-controller="Sharing" asp-action="Index" class="btn btn-outline-info btn-sm w-100">
                            <i class="bi bi-arrow-right me-1"></i>View Shared
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card stat-card actions-card hover-lift h-100">
                <div class="card-body d-flex flex-column">
                    <div class="text-center mb-3">
                        <h6 class="text-muted mb-1">Quick Actions</h6>
                        <div class="display-4 text-warning opacity-75 mb-2">
                            <i class="bi bi-lightning"></i>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <div class="d-grid gap-2">
                            <a asp-controller="Notes" asp-action="Create" class="btn btn-primary btn-sm">
                                <i class="bi bi-plus me-1"></i> New Note
                            </a>
                            <a asp-controller="Files" asp-action="Upload" class="btn btn-success btn-sm">
                                <i class="bi bi-upload me-1"></i> Upload File
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section with Enhanced Cards -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card hover-lift shadow-modern">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>Recent Notes
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentNotes != null && ((IEnumerable<dynamic>)ViewBag.RecentNotes).Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var note in (IEnumerable<dynamic>)ViewBag.RecentNotes)
                            {
                                <div class="list-group-item bg-transparent border-0 px-0 py-3 hover-lift">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">@note.Title</h6>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar me-1"></i>
                                                @note.CreatedAt.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                        <a asp-controller="Notes" asp-action="Details" asp-route-id="@note.Id" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="text-center mt-3 pt-3 border-top">
                            <a asp-controller="Notes" asp-action="Index" class="btn btn-primary">
                                <i class="bi bi-journal me-2"></i>View All Notes
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-journal-x display-4 text-muted mb-3"></i>
                            <h6 class="text-muted mb-3">No notes yet</h6>
                            <a asp-controller="Notes" asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus me-2"></i>Create your first note
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card hover-lift shadow-modern">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>Recent Files
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentFiles != null && ((IEnumerable<dynamic>)ViewBag.RecentFiles).Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var file in (IEnumerable<dynamic>)ViewBag.RecentFiles)
                            {
                                <div class="list-group-item bg-transparent border-0 px-0 py-3 hover-lift">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">
                                                <i class="bi bi-file-earmark me-1"></i>
                                                @file.FileName
                                            </h6>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar me-1"></i>
                                                @file.UploadedAt.ToString("MMM dd, yyyy") • 
                                                @(Math.Round((double)file.FileSize / 1024, 1)) KB
                                            </small>
                                        </div>
                                        <a asp-controller="Files" asp-action="Download" asp-route-id="@file.Id" 
                                           class="btn btn-outline-success btn-sm">
                                            <i class="bi bi-download"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="text-center mt-3 pt-3 border-top">
                            <a asp-controller="Files" asp-action="Index" class="btn btn-success">
                                <i class="bi bi-file-earmark me-2"></i>View All Files
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-file-earmark-x display-4 text-muted mb-3"></i>
                            <h6 class="text-muted mb-3">No files yet</h6>
                            <a asp-controller="Files" asp-action="Upload" class="btn btn-success">
                                <i class="bi bi-upload me-2"></i>Upload your first file
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="hero-section">
            <h1 class="display-3 fw-bold text-gradient mb-4">
                <i class="bi bi-journal-text me-3"></i>Notes & File Sharing
            </h1>
            <p class="lead mb-5 text-muted">
                Organize your thoughts with notes and securely share files with others. 
                Create, manage, and collaborate on your content in one place.
            </p>
            
            <div class="row mb-5">
                <div class="col-md-4 mb-4">
                    <div class="card h-100 hover-lift shadow-modern">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-journal-plus display-1 text-primary mb-3"></i>
                            <h5 class="fw-bold">Create Notes</h5>
                            <p class="text-muted">Write and organize your thoughts with our easy-to-use note editor.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 hover-lift shadow-modern">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-cloud-upload display-1 text-success mb-3"></i>
                            <h5 class="fw-bold">Upload Files</h5>
                            <p class="text-muted">Securely store and manage your documents, images, and other files.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 hover-lift shadow-modern">
                        <div class="card-body text-center p-4">
                            <i class="bi bi-people display-1 text-info mb-3"></i>
                            <h5 class="fw-bold">Share & Collaborate</h5>
                            <p class="text-muted">Share your notes and files with others for seamless collaboration.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-3 justify-content-center">
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                    <i class="bi bi-person-plus me-2"></i>Get Started
                </a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                </a>
            </div>
        </div>
    </div>
}
